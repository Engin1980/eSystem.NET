<Window x:Class="WpfKeyHookTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKeyHookTesting"
        mc:Ignorable="d"
        FontSize="14"
        Title="MainWindow" Height="450" Width="800">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
      <Button x:Name="btnAddHook" Click="btnAddHook_Click">Add Hook</Button>
      <Button x:Name="btnDeleteHook" Click="btnDeleteHook_Click">Delete Hook</Button>
      <Button x:Name="btnAddShortcut" Click="btnAddShortcut_Click">Add Shortcut</Button>
      <Button x:Name="btnAddChord" Click="btnAddChord_Click">Add Chord</Button>
      <Button x:Name="btnDeleteShortcutOrChord">Delete shortcut/chord</Button>
    </StackPanel>

    <TreeView x:Name="tvwRegistered" ItemsSource="{Binding KeyHooksVM}" SelectedItemChanged="tvwRegistered_SelectedItemChanged">
      <TreeView.ItemTemplate>
        <HierarchicalDataTemplate ItemsSource="{Binding Registereds}">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="KeyHook" FontWeight="Bold" />
            <TextBlock Text=" (" />
            <TextBlock Text="{Binding Registereds.Count}" />
            <TextBlock Text=")" />
          </StackPanel>
          <HierarchicalDataTemplate.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding DisplayText}" />
                <TextBlock Text=" - " />
                <TextBlock Text="{Binding LastActivated, StringFormat='{}{0:G}'}" />
              </StackPanel>
            </DataTemplate>
          </HierarchicalDataTemplate.ItemTemplate>
        </HierarchicalDataTemplate>
      </TreeView.ItemTemplate>
    </TreeView>
  </DockPanel>
</Window>
